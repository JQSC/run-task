{
    "name": "y",
    "displayName": "run-task",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:task.refresh",
        "onCommand:task.run",
        "onCommand:task.restart",
        "onCommand:task.stop",
        "onView:task-running",
        "onView:task-deprecated"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "task.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "task.run",
                "title": "Run",
                "icon": {
                    "light": "resources/run.svg",
                    "dark": "resources/run.svg"
                }
            },
            {
                "command": "task.restart",
                "title": "Restart",
                "icon": {
                    "light": "resources/restart.svg",
                    "dark": "resources/restart.svg"
                }
            },
            {
                "command": "task.stop",
                "title": "Stop",
                "icon": {
                    "light": "resources/stop.svg",
                    "dark": "resources/stop.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "task.refresh",
                    "when": "view == task-running",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "task.run",
                    "when": "view =~ /task-running/ && viewItem == unstart",
                    "group": "inline"
                },
                {
                    "command": "task.restart",
                    "when": "view =~ /task-running/ && viewItem == restart",
                    "group": "inline"
                },
                {
                    "command": "task.stop",
                    "when": "view =~ /task-running/ && viewItem == running",
                    "group": "inline"
                }
            ]
        },
        "views": {
            "task-explorer": [
                {
                    "id": "task-running",
                    "name": "WORKING"
                },
                {
                    "id": "task-deprecated",
                    "name": "DEPRECATED"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "task-explorer",
                    "title": "Run Task",
                    "icon": "resources/english.svg"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "RunTask Configuration",
            "properties": {
                "runtask.showTerminal": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show terminal when executing."
                },
                "runtask.watchTaskChanges": {
                    "type": "boolean",
                    "default": true,
                    "description": "Watch for task changes and update task list automatically."
                },
                "runtask.searchTaskFileInSubdirectories": {
                    "type": "boolean",
                    "default": true,
                    "description": "Search task from subdirectories for npm and gulp etc. (experimental)"
                },
                "runtask.excludesGlob": {
                    "type": "string",
                    "default": "**/{node_modules,.vscode-test,.git,bower_components}",
                    "description": "The glob which Quick Task will exclude from scans."
                },
                "runtask.gulpGlob": {
                    "type": "string",
                    "default": "{gulpfile.js,gulpfile.ts,gulpfile.babel.js}",
                    "description": "The glob which Quick Task will scan for gulp tasks."
                },
                "runtask.npmGlob": {
                    "type": "string",
                    "default": "package.json",
                    "description": "The glob which Quick Task will scan for npm tasks."
                },
                "runtask.enableGulp": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enables the scanning of Gulp tasks."
                },
                "runtask.enableNpm": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enables the scanning of NPM tasks."
                },
                "runtask.enablePowershell": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enables the scanning of Powershell scripts."
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.54.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }
}